{
  "family": "video-artifact-processing-engine",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/video-artifact-processing-task-role",
  "containerDefinitions": [
    {
      "name": "video-artifact-engine",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/video-artifact-processing:${IMAGE_TAG}",
      "essential": true,
      "cpu": 2048,
      "memory": 4096,
      "memoryReservation": 3072,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "${AWS_REGION}"
        },
        {
          "name": "ECS_ENABLE_TASK_PROTECTION",
          "value": "true"
        },
        {
          "name": "CLEANUP_TEMP_FILES",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/video-processing/database-url"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/video-processing/aws-access-key-id"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/video-processing/aws-secret-access-key"
        },
        {
          "name": "SQS_QUEUE_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/video-processing/sqs-queue-url"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/video-artifact-processing",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import requests; requests.get('http://localhost:8000/health').raise_for_status()\" || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "stopTimeout": 300,
      "mountPoints": [
        {
          "sourceVolume": "tmp-video-processing",
          "containerPath": "/tmp/video_processing",
          "readOnly": false
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "tmp-video-processing",
      "host": {}
    }
  ],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Service",
      "value": "video-artifact-processing"
    },
    {
      "key": "TaskProtection",
      "value": "enabled"
    }
  ]
}
